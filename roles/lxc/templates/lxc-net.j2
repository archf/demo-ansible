# containers.  Set to "false" if you'll use virbr0 or another existing
# bridge, or mavlan to your host's NIC.
USE_LXC_BRIDGE="{{ lxc_use_bridge }}"

# If you change the LXC_BRIDGE to something other than lxcbr0, then
# you will also need to update your /etc/lxc/default.conf as well as the
# configuration (/var/lib/lxc/<container>/config) for any containers
# already created using the default config to reflect the new bridge
# name.
# If you have the dnsmasq daemon installed, you'll also have to update
# /etc/dnsmasq.d/lxc and restart the system wide dnsmasq daemon.

# ipv4
LXC_BRIDGE="{{ lxc_bridge }}"
LXC_ADDR="{{ lxc_ipv4 | ipaddr('address') }}"
LXC_NETMASK="{{ lxc_ipv4 | ipaddr('netmask') }}"
LXC_NETWORK="{{ lxc_ipv4 | ipaddr('network') }}"

# ipv6
LXC_IPV6_ADDR="{{ lxc_ipv6 }}"
LXC_IPV6_MASK="{{ lxc_ipv6 | ipaddr('prefix') }}"
LXC_IPV6_NETWORK="{{ lxc_ipv6 | ipaddr('network') }}"
LXC_IPV6_NAT="{{ lxc_ipv6_nat }}"

# dhcp
LXC_DHCP_RANGE="{{ lxc_dhcp_range }}"
LXC_DHCP_MAX="{{ lxc_dhcp_max }}"
{#{{ lxc_ipv4 | ipaddr('address') }}, {{ lxc_ipv4 | ipaddr('address') }} + 1" #}

